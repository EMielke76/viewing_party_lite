<h1><%= @user.name %>'s Movie Page</h1>

<%= button_to "Top Rated Movies",  "/users/#{@user.id}/movies?q=top%20rated", method: :get%>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label 'Search by Title' %>
  <%= f.text_field :search, label: "Search by Title", placeholder: 'ex: Sing Street' %>
  <%= f.submit "Find Movies" %>
<% end %>